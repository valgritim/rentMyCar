{% extends 'base.html.twig' %}
{% block title%}Modification du profil utilisateur{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5" id="userh2"><i class="fas fa-user-alt"></i>  Modification du profil</h1>
    {{ form_start(form) }}

    <div class="row">
        <div class="col">
            <div class="bg bg-light p-5">
                <h2 class="info">Informations générales</h2>
                <hr>
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.picture) }}            
            </div>        
        </div>
        <div class="col">
            <div class="bg bg-light p-5">
                <h2 class="info">Détails</h2>
                <hr>
                {{ form_row(form.introduction) }}
                {{ form_row(form.description) }}            
            </div>
        </div>    
    </div>
   
    <button type="submit" class="btn btn-danger mt-5"><i class="fas fa-check"></i> Modifier !</button>
    {{ form_end(form) }}

</div>
   
{% endblock body %}