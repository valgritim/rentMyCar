{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5" id="inscription">Inscrivez-vous sur notre site!</h1>    
    {{ form_start(form) }}
    <div class="row bg bg-light p-5">
        <div class="col-md-6 mr-2">
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.picture) }}
        </div>
        <div class="col-md-6">
            {{form_row(form.introduction) }}
            {{form_row(form.description) }}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-6">
            {{ form_row(form.hash) }}
            {{form_row(form.passwordConfirm)}}
    </div>
</div>         

    {{ form_widget(form) }}
    <h4>Vous y Ãªtes presque ! Confirmez votre inscription !</h4>
    <button type="submit" class="btn btn-success mt-3"><i class="fas fa-check"></i>  Confirmez l'inscription</button>

    {{ form_end(form) }}
</div>
{% endblock %}