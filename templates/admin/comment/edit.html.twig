{% extends 'admin/base.html.twig'%}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification du commentaire n° {{ comment.id }}</h1>
        <div class="alert alert-info">
           
                <strong>Annonce liée: </strong> {{ comment.advert.title }}<br/>
                <strong>Auteur: </strong> {{ comment.author.firstName}} {{ comment.author.lastName}}<br/>
                <strong>Date de création: </strong> {{ comment.createdAt | date('d/m/Y H:i') }}<br/>
                <strong>Note donnée: </strong> {{ comment.rating }}<br/>
          
        </div>
        <div class="row mt-2">      
            <div class="col">
                {{ form_start(form) }}
                {{ form_widget(form)}}
                    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Enregistrer les modifications</button>
                {{ form_end(form) }}
            </div>
                
        </div>        
    </div>
{% endblock %}