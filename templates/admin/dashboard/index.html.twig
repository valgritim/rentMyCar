{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col">
                <div class="card bg-primary text-light mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.users}} utilisateurs inscrits</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-light bg-success mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-car fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.adverts}} Annonces postées</h4>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-light text-center mb-3 bg-warning">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.bookings}} réservations</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-light text-center mb-3 bg-info">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.comments}} avis</h4>
                            </div>
                        </div>
                    </div>
                </div>          
            </div>        
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-up"></i> Les annonces les mieux notées</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for advert in bestAdverts %}
                            <tr>
                                <td>{{ advert.title }}</td>
                                <td>
                                    <img src="{{advert.picture}}" alt="photo propriétaire" class="avatar avatar-mini">
                                    {{advert.firstName}} {{advert.lastName}}
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-dark">{{advert.note | number_format(1, ",", " ")}}</span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-down"></i> Les annonces les moins bien notées</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for advert in worstAdverts %}
                            <tr>
                                <td>{{ advert.title }}</td>
                                <td>
                                    <img src="{{advert.picture}}" alt="photo propriétaire" class="avatar avatar-mini">
                                    {{advert.firstName}} {{advert.lastName}}
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-dark">{{advert.note | number_format(1, ",", " ")}}</span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>

{% endblock %}
