{% extends 'base.html.twig' %}

{% block title %}Réserver l'annonce {{ advert.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Réserver pour l'annonce {{ advert.title }}</h1>
        <p>Vous êtes sur le point de réserver le véhicule de <strong>{{ advert.author.firstName }} {{ advert.author.lastName}} !</strong></p>
    
        {{ form_start(form) }}
            <div class="alert alert-warning">
                <h2>Quelles dates vous intéressent?</h2>
                <div class="row">
                    <div class="col">{{ form_row(form.startDate) }}</div>
                    <div class="col">{{ form_row(form.endDate) }}</div>
                </div>
            </div>
            <h4>Montant du séjour : <span id="amount">...</span> &euro; </h4>
            <span id="days">0</span> jour(s) à {{ advert.price }} Euros / jour.

            <h2 class="mt-4">Vous avez un commentaire ?</h2>
            {{ form_row(form.comment) }}

            <h2>Vous avez terminé !</h2>
            <button type=" submit" class="btn-success mt-2">Je réserve !</button>
        {{ form_end(form) }}
    </div>

    

{% endblock %}
